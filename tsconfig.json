{
  "compilerOptions": {
    "lib": [
      "dom",
      "es5"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": "build/",
    "removeComments": true,
    "sourceMap": true,
    "target": "es5"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}